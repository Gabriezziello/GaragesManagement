@model GarageManagement.Models.ServicesAndPartsView
@{
    ViewBag.Title = "Edit Services And Auto Parts";
}
<p class="text-success">@ViewBag.StatusMessage</p>
@using (Html.BeginForm("EditService", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.Hidden("Id", Model.Id)



    @Html.AntiForgeryToken()

    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeHolder = "Please type a Name" })

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Price, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Price, new { @class = "form-control", @placeHolder = "Please type a Price" })

        </div>
    </div>   
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Save" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
