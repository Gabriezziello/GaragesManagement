@model List<ServicesAndParts>
@{ 
    Layout = "";
}
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Please find the Service/Auto Part to add into the booking.</h4>
            </div>
            <div class="modal-body form-horizontal" ">
                <table id="tblServicesAndParts" cellpadding="0" cellspacing="0" border="1" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Qtde</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td><input type="text" id="qtde@(item.Id)" name="qtde@(item.Id)" value="1" class="form-control qtd-bookingPrice" /></td>
                                <td><span class="glyphicon glyphicon-plus add-bookingPrice" data-id="@(item.Id)" id="add@(item.Id)" name="add@(item.Id)"></span></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default addProd" data-dismiss="modal">Save</button>
            </div>
        </div>

    </div>
</div>
