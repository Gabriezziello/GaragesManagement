@model List<Staff>
@{
    ViewBag.Title = "Admin - Staff";
}

<h2>@ViewBag.Title</h2>

<p class="text-success">@ViewBag.StatusMessage</p>

<div class="form-horizontal">
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a href="/Account/registerStaff"><input type="button" class="btn btn-success " value="Add new Staff" /></a>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <table id="tblStaff" cellpadding="0" cellspacing="0" border="1" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Surname</td>
                            <td><a href="/Account/RemoveStaff?id=@item.Id" style="margin-left:5px"><span class="glyphicon glyphicon-erase"></span></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

